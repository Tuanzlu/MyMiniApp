page {
    margin: 0;
    padding-bottom: 90rpx;
}
.info {
    padding: 0 30rpx;
    display: flex;
    margin-bottom: 10rpx;
    height: 200rpx;
    background-color: whitesmoke;
}
.logo{
    margin: 20rpx;
    height: 150rpx;
    width: 150rpx;
}
.name {
    margin: auto 0;
    font-weight: bold;
    font-size: 24px;
}
.list {
    display: flex;
    flex-direction: row;
}
.btm-tool {
    left: 0;
    bottom: 0;
    width: 100%;
    position: fixed;
    height: 90rpx;
    background-color: white;
    display: flex;
    border-top: 1rpx rgb(231, 230, 230) solid;
    justify-content: space-between;
}
.icon-gouwuche02 {
    margin: 20rpx;
    font-size: 24px;
}
.tool-item {
    font-size: 24px;
}
.price-info {
    display: flex;
    align-items: center;
    font-size: 18px;
}
.right-shadow {
    justify-content: center;
    width: 350rpx;
    line-height: 90rpx;
    background-color: gray;
    color: white;
    display: flex;
    align-items: center;
    font-weight: bold;
}
.classifier {
    display: flex;
    flex-direction: column;
    width: 20%;
}
.class-item {
    display: flex;
    padding-left: 20rpx;
    align-items: center;
    height: 200rpx;
    background-color: rgb(243, 242, 242);
    border: solid white 1rpx;
}
.activeClass {

    border-left: solid 10rpx black;
    background-color: white !important;
}
.long-list{
    width: 80%;
    background-color: white;
    display: flex;
    flex-direction: column;
}
.title {
    background-color: rgb(240, 240, 238);

    font-size: 16px;
    padding: 0 40rpx;
}
.card{
    display: flex;
    flex-direction: row;
    margin:20px;
    height: 200rpx;
    border-bottom: 1px solid grey;
}
.card-info{
    text-align: left;
    margin:0 10px;
}
.bread-name{
    font-size: 15px;
}
.bread-info{
    margin: 10rpx 0;
    color:grey;
    font-size: 12px;
}
.bread-price{
    width: 300rpx;
    color: rgb(161, 17, 17);
}
.list-img{
    width: 150rpx;
    height: 150rpx;
    margin: 0 5px;
}
.mini-btn{
    float: right;
    font-size: 12px;
    line-height:23px;
    height: 25px;
}
.sold-out{
    float: right;
    font-size: 12px;
    line-height:23px;
    height: 25px;
}
.stock {
    font-size: 10px;
    margin-left: 100rpx;
}