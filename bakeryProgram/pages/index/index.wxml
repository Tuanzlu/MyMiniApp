<view class="intro">
    <view>
        <swiper indicator-dots="{{indicatorDots}}"
          autoplay="{{autoplay}}" 
          interval="{{interval}}" 
          duration="{{duration}}"
          circular="{{circular}}"
        >
        <block wx:for="{{background}}" >
          <swiper-item>
            <image mode="widthFix" class="img" src="{{item.path}}" />
          </swiper-item>
        </block>
      </swiper>
</view>
<view class="info-bar">
  <view class="info-detail">商家详情</view>
  <view class="info-name">
    <image class="logo" src="../../imgs/logo.jpeg"/>
    <text class="name">{{name}}</text>
  </view>
  <view class="info-time">营业时间: {{time}}</view>
  <view class="info-place">营业地点: {{position}}</view>
</view>
<longList></longList>
</view>